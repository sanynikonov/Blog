@model IEnumerable<Blog.Business.BlogListItemModel>

@{
    ViewData["Title"] = "Current blogs";
}

<h1>Current Blogs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="GetByBiggestActivityInPeriod">Activity</a>
</p>
<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
